#include <iostream>
using namespace std;

int main() {
    int limit;
    int sum = 0;

    // Prompt user for the upper limit
    cout << "Enter the upper limit for the sum of even numbers: ";
    cin >> limit;

    // Loop to calculate the sum of even numbers
    for (int i = 2; i <= limit; i += 2) {
        sum += i;
    }

    // Display the result
    cout << "The sum of even numbers up to " << limit << " is: " << sum << endl;

    return 0;
}
